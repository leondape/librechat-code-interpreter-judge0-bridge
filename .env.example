# Server
PORT=3001
HOST=localhost                         # Use localhost for development (0.0.0.0 for containers)

# Judge0
JUDGE0_API_URL=https://ce.judge0.com
JUDGE0_API_KEY=                        # If Judge0 instance requires auth (X-Auth-Token)

# Authentication (key that LibreChat sends in X-API-Key header)
LIBRECHAT_CODE_API_KEY=                # Set same value in LibreChat as LIBRECHAT_CODE_API_KEY

# Storage
STORAGE_TYPE=memory                    # "memory" or "redis"
REDIS_URL=redis://localhost:6379      # If using redis

# Limits
SESSION_EXPIRY_MS=86400000             # 24 hours
MAX_FILE_SIZE=157286400                # 150MB

